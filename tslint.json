{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "arrow-parens": [ true, "ban-single-arg-parens" ],
        "arrow-return-shorthand": [ true, "multiline" ],
        "array-type": [ true, "array" ],
        "curly": true,
        "cyclomatic-complexity": true,
        "indent": [ true, "spaces", 4 ],
        "interface-name": false,
        "linebreak-style": [ true, "LF" ],
        "max-line-length": false,
        "member-ordering": [ true, { "order": [ "public-static-field", "private-static-field", "public-instance-field", "protected-instance-field", "private-instance-field" ] } ],
        "no-bitwise": false,
        "no-boolean-literal-compare": true,
        "no-console": false,
        "no-implicit-dependencies": false,
        "no-invalid-template-strings": false,
        "no-inferrable-types": [ true, "ignore-params" ],
        "no-object-literal-type-assertion": false,
        "no-shadowed-variable": false,
        "no-submodule-imports": false,
        "no-tautology-expression": true,
        "no-unnecessary-field-initialization": true,
        "no-useless-files": true,
        "object-literal-sort-keys": false,
        "prefer-template": true,
        "quotemark": [ true, "single", "avoid-escape", "jsx-double" ],
        "semicolon": [ true, "always", "strict-bound-class-methods" ],
        "trailing-comma": [ true, { "multiline": "never", "singleline": "never" } ],

        // tslint-microsoft-contrib rules
        "no-empty-line-after-opening-brace": true,
        "no-typeof-undefined": true,
        "no-unnecessary-local-variable": true,
        "no-unnecessary-override": true,
        "no-unnecessary-semicolons": true,
        "prefer-array-literal": true,
        "react-anchor-blank-noopener": true,
        "react-this-binding-issue": false,
        "react-tsx-curly-spacing": [ true, "never", { "allowMultiline": true } ],
        "react-unused-props-and-state": [ true, { "props-interface-regex": "I.+Props$", "state-interface-regex": "I.+State$" } ],
        "use-simple-attributes": false
    },
    "rulesDirectory": [ "./node_modules/tslint-microsoft-contrib" ]
}
